<script>
  volantis.message=(title,message,type,time = 3000,autoClose,)=>{
    if (typeof $.message=='undefined') {
      <% if(theme.use_cdn) { %>
        var messageJS='https://cdn.jsdelivr.net/npm/hexo-theme-volantis@<%- theme.info.theme_version %>/source/js/message.js';
        var messageCSS='https://cdn.jsdelivr.net/npm/hexo-theme-volantis@<%- theme.info.theme_version %>/source/css/message.css';
      <% } else { %>
        var messageJS='<%- url_for("/js/message.js") %>'
        var messageCSS='<%- url_for("/css/message.css") %>'
      <% } %>
      loadCSS(messageCSS)
      loadScript(messageJS,()=>{
        start(title,message,type,autoClose,time)
      })
    }else{
      start(title,message,type,autoClose,time)
    }
    function start(title,message,type,autoClose,time){
        $.message({
          title: title,
          message: message,
          type: type,
          autoClose: autoClose,
          time: time
        });
    }
  }
</script>
